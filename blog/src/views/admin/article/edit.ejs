<%- include('../../layouts/admin-top.ejs') %>

<form action="/admin/article/<%= article.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-item">
    <label class="title">Title</label>
    <input type="text" name="title" value="<%= article.title %>" />
  </div>
  <div class="form-item">
    <label class="title">Text</label>
    <textarea name="text" cols="30" rows="7"><%= article.text %></textarea>
  </div>
  <div class="form-item">
    <button type="submit">Save</button>
  </div>
</form>

<%- include('../../layouts/admin-bottom.ejs') %>
