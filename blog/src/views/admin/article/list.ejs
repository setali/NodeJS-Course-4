<%- include("../../layouts/admin-top.ejs") %>

<div>
  <a class="action" href="/admin/article/create">Add Article</a>
  <div class="list-items">
    <table>
      <thead>
        <tr>
          <td>ID</td>
          <td>Title</td>
          <td>Actions</td>
        </tr>
      </thead>
      <tbody>
        <% for (const article of articles) { %>
        <tr>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td>
            <a class="action inline" href="/admin/article/<%= article.id %>"
              >Show</a
            >
            <a
              class="action inline"
              href="/admin/article/<%= article.id %>/edit"
              >Edit</a
            >

            <%- include('../../includes/article-delete-form.ejs', { article}) %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include("../../layouts/admin-bottom.ejs") %>
